# ⚠️  TEMPLATE FILE - DO NOT COMMIT WITH REAL CREDENTIALS!
# Copy this file to .env and fill in your actual values
# The .env file is already in .gitignore for your protection

# =============================================================================
# YouTube API Configuration
# =============================================================================
# Obtain your API key from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=

# =============================================================================
# Content API Configuration
# =============================================================================
# The base URL of your content management API (e.g., https://api.example.com/contents)
CONTENT_API_URL=

# Bearer token for authenticating with the content API
CONTENT_API_TOKEN=

# =============================================================================
# Search Configuration
# =============================================================================
# The search query to use for finding YouTube videos
SEARCH_QUERY=tipos de visto para portugal

# Number of new (unique) videos to collect before stopping
TARGET_NEW_VIDEOS=10

# Maximum number of pages to search through on YouTube
MAX_PAGES_TO_SEARCH=10

# Number of results per page (YouTube API allows up to 50)
MAX_RESULTS_PER_PAGE=10

# =============================================================================
# Pipeline Configuration
# =============================================================================
# Enable/disable deduplication against existing content (true/false)
ENABLE_DEDUPLICATION=true

# Enable/disable metadata enrichment - sentiment analysis, etc. (true/false)
ENABLE_ENRICHMENT=false

# =============================================================================
# Logging Configuration
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# ⚠️  WARNING: Never use DEBUG in production (may expose sensitive data)
LOG_LEVEL=INFO
